@model DigitalHub.Models.Cart
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4">Checkout</h2>
    <form action="@Url.Action("PlaceOrder", "Checkout")" method="post">
        <h4>Order Summary</h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Items)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="~/Images/@item.Category/@item.Image" alt="@item.ProductName" class="img-thumbnail me-3" style="width: 60px; height: 60px; object-fit: cover;">
                        <div>
                            <div>@item.ProductName</div>
                            <div>Quantity: @item.Quantity</div>
                            <div>Price: @item.Price.ToString("N0") ₫</div>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <p class="mb-4"><strong>Total: @Model.Total.ToString("N0") ₫</strong></p>

        <div class="mb-3">
            <label for="address" class="form-label">Delivery Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Enter your delivery address" required>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
</div>
