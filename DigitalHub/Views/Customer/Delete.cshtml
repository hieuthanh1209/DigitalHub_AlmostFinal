@model DigitalHub.Models.Customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMasterLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-start">
        <div class="col-md-8">
            <h3 class="text-start mb-4">
                BẠN CÓ CHẮC CHẮN MUỐN XÓA KHÁCH HÀNG NÀY?
            </h3>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-md-4 text-start">TÊN KHÁCH HÀNG</dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.NameCus)
                    </dd>

                    <dt class="col-md-4 text-start">SỐ ĐIỆN THOẠI</dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.PhoneCus)
                    </dd>

                    <dt class="col-md-4 text-start">EMAIL</dt>
                    <dd class="col-md-8">
                        @Html.DisplayFor(model => model.EmailCus)
                    </dd>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.IDCus) <!-- Assuming the customer model has ID -->
                    <div class="form-actions text-start">
                        <button type="submit" class="btn btn-danger">XÓA</button>
                        <span class="mx-3">|</span>
                        @Html.ActionLink("TRỞ LẠI", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
