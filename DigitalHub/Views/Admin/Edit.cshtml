@model DigitalHub.Models.AdminUser
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMasterLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">CHỈNH SỬA ADMIN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.ID)

            <!-- NameUser -->
            <div class="form-group row">
                @Html.LabelFor(model => model.NameUser, "Họ và Tên", new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.NameUser, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- RoleUser -->
            <div class="form-group row">
                @Html.LabelFor(model => model.RoleUser, "Vai trò", new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.RoleUser, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- PasswordUser -->
            <div class="form-group row">
                @Html.LabelFor(model => model.PasswordUser, "Mật khẩu", new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.PasswordUser, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-primary">LƯU</button>
                </div>
            </div>
        </div>
    }

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-secondary">TRỞ LẠI</a>
    </div>
</div>
