@model IEnumerable<DigitalHub.Models.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminMasterLayout.cshtml";
}
<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">Các loại mặt hàng</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
       })
    </p>
    <table class="table">
        <tr>    
            <th>
                MÃ LOẠI HÀNG
            </th>
            <th>
                LOẠI HÀNG
            </th>
            <th>
                LỆNH
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new
                    {
                   @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID },
                   new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new
                    {
                   @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
    </table>
</div>