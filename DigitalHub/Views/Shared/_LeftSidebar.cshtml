@{
    string currentAction = ViewContext.RouteData.Values["action"].ToString();
}

<div class="list-group">
    <a href="@Url.Action("CustomerInfo", "Users")" class="list-group-item list-group-item-action @(currentAction == "CustomerInfo" ? "active" : "")">
        Thông tin tài khoản
    </a>
    <a href="@Url.Action("ChangePassword", "Users")" class="list-group-item list-group-item-action @(currentAction == "ChangePassword" ? "active" : "")">
        Bảo mật
    </a>
    <a href="@Url.Action("OrderHistory", "Users")" class="list-group-item list-group-item-action @(currentAction == "OrderHistory" ? "active" : "")">
        Hóa đơn
    </a>
    <a href="@Url.Action("ViewHistory", "Users")" class="list-group-item list-group-item-action @(currentAction == "ViewHistory" ? "active" : "")">
        Lịch sử xem sản phẩm
    </a>
    <a href="@Url.Action("Logout", "Users")" class="list-group-item list-group-item-action text-danger">
        Đăng xuất
    </a>
</div>